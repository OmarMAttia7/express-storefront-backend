{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "engines": {
    "node": "16.18.0"
  },
  "scripts": {
    "start": "$npm_execpath run migrate-up && $npm_execpath run seed || true && node dist/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test": "node scripts/test",
    "pretest": "$npm_execpath run build",
    "build": "tsc",
    "lint": "prettier src --write && eslint src --fix",
    "migrate-up": "$npm_execpath run db-migrate up",
    "migrate-reset": "$npm_execpath run db-migrate reset",
    "seed": "node scripts/seed",
    "build:prod-copy": "cp .elasticbeanstalk -r www/.elasticbeanstalk && cp -r scripts www/scripts && cp migrations -r www/migrations && cp spec -r www/spec && cp package.json www/package.json",
    "prebuild:prod": "rm -r www",
    "build:prod": "mkdir www && $npm_execpath run build:prod-copy && $npm_execpath run build && cp dist -r www/dist && cd www && zip -r Archive.zip . && cd .."
  },
  "author": "Omar M. Attia",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
